@page
@model Tabby_Docker.Pages.Bookmarks.IndexModel
@{
    ViewData["Title"] = "Tabby";
}

<div class="text-center">
    <!--<h1 class="display-4">Message of the Day</h1>-->
    <p>What have you saved today?</p>
    <div class="card-columns">
        @foreach (var item in Model.Bookmark.Reverse())
        {

            <div class="card" style="width: 20rem;">

                <div class="card-body">
                    <div class="card-title"><b>
                         @Html.DisplayFor(modelItem => item.Title)  </b>
                         <a href="@Html.DisplayFor(modelItem => item.URL)" >
                             <img src="~/Images/external-link.svg" alt="Open Link" style="float:right;width:20px;height:20px;" /></a></div>
                    <p class="card-text"> @Html.DisplayFor(modelItem => item.Description) </p>
                    <div class="card-link"><a href="@Html.DisplayFor(modelItem => item.URL)">Source: @Html.DisplayFor(modelItem => item.SiteName) </a></div>
                    <div class="card-footer text-muted">
                        <small class="text-muted">@Html.DisplayFor(modelItem => item.DateAdded)</small> <a asp-page="./Bookmarks/Delete" asp-route-id="@item.ID"><img src="~/Images/trash-2.svg" alt="Delete Bookmark" style="float:right;width:20px;height:20px;" /></a>

                    </div>

                </div>
            </div>

        }
    </div>
</div>
