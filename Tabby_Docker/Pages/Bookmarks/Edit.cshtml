@page
@model Tabby_Docker.Pages.Bookmarks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bookmark</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bookmark.ID" />
            <div class="form-group">
                <label asp-for="Bookmark.Title" class="control-label"></label>
                <input asp-for="Bookmark.Title" class="form-control" />
                <span asp-validation-for="Bookmark.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bookmark.Description" class="control-label"></label>
                <input asp-for="Bookmark.Description" class="form-control" />
                <span asp-validation-for="Bookmark.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bookmark.URL" class="control-label"></label>
                <input asp-for="Bookmark.URL" class="form-control" />
                <span asp-validation-for="Bookmark.URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bookmark.SiteName" class="control-label"></label>
                <input asp-for="Bookmark.SiteName" class="form-control" />
                <span asp-validation-for="Bookmark.SiteName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bookmark.DateAdded" class="control-label"></label>
                <input asp-for="Bookmark.DateAdded" class="form-control" />
                <span asp-validation-for="Bookmark.DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bookmark.FaviconLoc" class="control-label"></label>
                <input asp-for="Bookmark.FaviconLoc" class="form-control" />
                <span asp-validation-for="Bookmark.FaviconLoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index"><button type="button" class="btn">Back to List</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
