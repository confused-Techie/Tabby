<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="~/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container">
                <img src="~/Images/tabbyIcon.svg" style="width:25px;height:25px;margin-right:10px;" />
                <a class="navbar-brand" asp-area="" asp-page="/Index">  Tabby - Home</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Settings">Settings</a>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="dropdown show" style="float:right;margin-right:50px;">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="extensionDropdown" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false" style="float:right;">
                Extensions
            </button>
            <div class="dropdown-menu" aria-labelledby="extensionDropdown" style="color:white;background-color:#212121;">
                <a class="dropdown-item" href="https://chrome.google.com/webstore/detail/tabby-chrome-extension/ifjdlkpicmjmojpfnnegehnkblbjhnad?hl=en" style="color:white;background-color:#212121;">Chrome Web Store</a>
                <a class="dropdown-item" href="https://addons.mozilla.org/en-US/firefox/addon/tabby-extension/" style="color:white;background-color:#212121;">Firefox Add-Ons</a>
                <a class="dropdown-item" href="https://microsoftedge.microsoft.com/addons/detail/tabby-edge-extension/obbjajbinlombefaffnlmmkapbendfmn" style="color:white;background-color:#212121">Edge Add-ons Beta</a>
            </div>
            </div>
            <a href="https://github.com/confused-Techie/Tabby" >
            <img src="~/Images/github.svg" style="float:right;width:40px;" />
            </a>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
